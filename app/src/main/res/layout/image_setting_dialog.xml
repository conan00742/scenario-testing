<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal">

    <krot.sample.com.meshchat.widget.CustomChatMessageImageView
        android:id="@+id/selected_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/icon_close_dialog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:src="@mipmap/ic_close_dialog"/>

        <ImageView
            android:id="@+id/icon_send_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_send_message"/>

    </LinearLayout>

</LinearLayout>